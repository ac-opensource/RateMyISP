<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_stardust"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".fragments.SelectISPFragment">

    <TextView
        android:id="@+id/select_isp_header"
        android:text="@string/select_isp_header"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textAlignment="gravity"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" >


        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="@string/isp_pldt"
            android:contentDescription="@string/isp_pldt"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="@string/isp_bayantel"
            android:contentDescription="@string/isp_bayantel"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="@string/isp_globe"
            android:contentDescription="@string/isp_globe"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" >


        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="@string/isp_smart"
            android:contentDescription="@string/isp_smart"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="@string/isp_sun"
            android:contentDescription="@string/isp_sun"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:text="@string/isp_sky_broadband"
            android:contentDescription="@string/isp_sky_broadband"/>

    </LinearLayout>


</LinearLayout>
